    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>

    <style>
        .form-control {
            margin-top: 7px;
            width: 50%;
        }

        .table {
            margin-top: 5%;
        }
    </style>
